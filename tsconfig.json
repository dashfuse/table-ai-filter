{
    "compilerOptions": {
      "target": "es2016",
      "module": "ESNext",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "dist/types",
      "sourceMap": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react",
      "lib": ["dom", "dom.iterable", "esnext"],
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "baseUrl": ".",
      "paths": {
        "table-ai-filter": ["src/index.ts"],
        "table-ai-filter/tanstack": ["src/adapters/tanstack/index.tsx"]
      }
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "dist",
      "src/**/*.test.ts",
      "src/**/*.test.tsx",
      "src/**/*.stories.tsx"
    ]
  }